                            <li>@Html.ActionLink("List of Norse myths", "Index", "ListMyths", new { IdMythology = 3 }, new { @class = "dropdown-item"})</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Slavic Mythology
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List of Slavic deities", "Index", "ListDeities", new { IdMythology = 4 }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("List of Slavic myths", "Index", "ListMyths", new { IdMythology = 4 }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Celtic Mythology
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List of Gaulish deities", "Index", "ListDeities", new { IdMythology = 5 }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("List of Gaulish myths", "Index", "ListMyths", new { IdMythology = 5 }, new { @class = "dropdown-item" })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("List of Irish deities", "Index", "ListDeities", new { IdMythology = 6 }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("List of Irish myths", "Index", "ListMyths", new { IdMythology = 6 }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Proto Indo-European Mythology
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List of Proto Indo-European deities", "Index", "ListDeities", new { IdMythology = 7 }, new { @class = "dropdown-item" })</li>
